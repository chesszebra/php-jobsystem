{
    "name": "chesszebra/jobsystem",
    "description": "A PHP library providing a job system used to run background jobs.",
    "license": "MIT",
    "type": "library",
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "doctrine/dbal": "*",
        "psr/container": "^1.0",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "chesszebra/coding-standards": "dev-master",
        "pda/pheanstalk": "^4.0",
        "phpunit/phpunit": "^6.3",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "ChessZebra\\JobSystem\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChessZebra\\JobSystem\\": "tests/"
        }
    },
    "suggests": {
        "pda/pheanstalk": "For Beanstalkd support using Pheanstalk"
    },
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 5000,
        "sort-packages": true
    }
}
